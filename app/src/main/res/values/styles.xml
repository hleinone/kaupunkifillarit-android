<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Base.AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/primary</item>
        <item name="colorControlHighlight">@color/primary_dark</item>
    </style>

    <style name="AppTheme" parent="Base.AppTheme">
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="SplashTheme" parent="Base.AppTheme">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="Base.InfoTitle" parent="TextAppearance.AppCompat.Headline">
    </style>

    <style name="AppTheme.InfoTitle" parent="Base.InfoTitle">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textAllCaps">true</item>
        <item name="fontPath">fonts/Montserrat-Bold.ttf</item>
    </style>

    <style name="Base.InfoContent" parent="TextAppearance.AppCompat.Small">
    </style>

    <style name="AppTheme.InfoContent" parent="Base.InfoContent">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorLink">@android:color/black</item>
        <item name="fontPath">fonts/Montserrat-Regular.ttf</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.AppCompat.Button">
    </style>

    <style name="AppTheme.AlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/primary_dark</item>
    </style>

</resources>
