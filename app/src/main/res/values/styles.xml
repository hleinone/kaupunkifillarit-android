<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Base.InfoTitle" parent="TextAppearance.AppCompat.Headline" />

    <style name="AppTheme.InfoTitle" parent="Base.InfoTitle">
        <item name="android:textColor">@color/info_drawer_text</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="Base.InfoContent" parent="TextAppearance.AppCompat.Small" />

    <style name="AppTheme.InfoContent" parent="Base.InfoContent">
        <item name="android:textColor">@color/info_drawer_text</item>
        <item name="android:textColorLink">@color/info_drawer_text</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/info_drawer_btn_bg_color_selector</item>
    </style>

</resources>
